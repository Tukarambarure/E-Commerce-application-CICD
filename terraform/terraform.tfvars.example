# General Configuration
project_name = "stylehub"
environment  = "production"
owner        = "devops-team"
aws_region   = "us-west-2"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
private_subnets = [
  "10.0.1.0/24",
  "10.0.2.0/24",
  "10.0.3.0/24"
]
public_subnets = [
  "10.0.101.0/24",
  "10.0.102.0/24",
  "10.0.103.0/24"
]
database_subnets = [
  "10.0.201.0/24",
  "10.0.202.0/24",
  "10.0.203.0/24"
]

# EKS Configuration
cluster_name    = "stylehub-cluster"
cluster_version = "1.28"

# Database Configuration (Optional - for production)
enable_rds = false
db_name     = "stylehub"
db_username = "stylehub"
db_password = "your-secure-password-here"
db_instance_class    = "db.t3.micro"
db_allocated_storage = 20

# ElastiCache Configuration (Optional - for production)
enable_elasticache = false
redis_node_type    = "cache.t3.micro"
redis_num_cache_nodes = 1

# Load Balancer Configuration
enable_alb_deletion_protection = true

# WAF Configuration (Optional - for production)
enable_waf = false
